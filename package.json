{
  "name": "@yankeeinlondon/code-builder",
  "version": "1.0.6",
  "description": "Adds code highlighting support to vite-plugin-md",
  "keywords": [
    "vitejs",
    "vuejs",
    "builder",
    "vite-plugin-md",
    "markdown"
  ],
  "homepage": "https://github.com/yankeeinlondon/code-builder#readme",
  "bugs": {
    "url": "https://github.com/yankeeinlondon/code-builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yankeeinlondon/code-builder.git"
  },
  "license": "MIT",
  "author": "Ken Snyder <ken@ken.net>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format=cjs,esm --dts --clean --external @unocss/vite",
    "watch": "tsup src/index.ts --format=cjs,esm --dts --watch",
    "lint": "run-p lint:*",
    "lint:src": "eslint ./src/**/*.ts --fix",
    "lint:test": "eslint ./test/**/*.ts --fix",
    "test": "vitest",
    "test:ci": "vitest run",
    "audit:fix": "pnpm audit --fix",
    "release": "run-s lint release:latest test:ci audit:fix release:bump",
    "release:latest": "pnpm install",
    "release:bump": "bumpp"
  },
  "dependencies": {
    "@unocss/vite": "^0.44.7",
    "@yankeeinlondon/builder-api": "^0.4.0",
    "@yankeeinlondon/happy-wrapper": "^2.5.0",
    "inferred-types": "^0.22.0",
    "pathe": "^0.3.2",
    "prismjs": "^1.28.0"
  },
  "devDependencies": {
    "@antfu/ni": "^0.17.2",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^16.11.45",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vitest/ui": "^0.19.1",
    "@vue/test-utils": "^2.0.2",
    "bumpp": "^8.2.1",
    "c8": "^7.12.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "fp-ts": "^2.12.2",
    "happy-dom": "^6.0.4",
    "markdown-it": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vite-plugin-md": "^0.20.0",
    "vitest": "^0.19.1",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2"
  },
  "peerDependencies": {
    "@unocss/vite": "^0.44.5",
    "@yankeeinlondon/builder-api": "^0.4.0",
    "markdown-it": ">=13"
  },
  "packageManager": "pnpm@7.5.2"
}
