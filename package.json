{
  "name": "@yankeeinlondon/code-builder",
  "version": "1.0.0-beta.4",
  "description": "Adds code highlighting support to vite-plugin-md",
  "keywords": [
    "vitejs",
    "vuejs",
    "builder",
    "vite-plugin-md",
    "markdown"
  ],
  "homepage": "https://github.com/yankeeinlondon/code-builder#readme",
  "bugs": {
    "url": "https://github.com/yankeeinlondon/code-builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yankeeinlondon/code-builder.git"
  },
  "license": "MIT",
  "author": "Ken Snyder <ken@ken.net>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format=cjs,esm --dts --clean",
    "watch": "tsup src/index.ts --format=cjs,esm --dts --watch",
    "lint": "run-p lint:*",
    "lint:src": "eslint ./src/**/*.ts --fix",
    "lint:test": "eslint ./test/**/*.ts --fix",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepublishOnly": "pnpm audit --fix && pnpm test:ci && pnpm install",
    "publish": "bumpp",
    "prepare": "husky install"
  },
  "dependencies": {
    "inferred-types": "^0.20.0",
    "prismjs": "^1.28.0",
    "vite-plugin-md": "*"
  },
  "devDependencies": {
    "@antfu/ni": "^0.16.2",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^16.11.41",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitest/ui": "^0.15.2",
    "@vue/test-utils": "^2.0.0",
    "@yankeeinlondon/happy-wrapper": "^2.3.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "esno": "^0.16.3",
    "fp-ts": "^2.12.1",
    "markdown-it": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "pathe": "^0.3.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "tsup": "^6.1.2",
    "typescript": "^4.7.4",
    "unocss": "^0.39.3",
    "vite": "^2.9.12",
    "vitest": "^0.15.2",
    "vue": "^3.2.37",
    "vue-router": "^4.0.16"
  },
  "peerDependencies": {
    "@yankeeinlondon/happy-wrapper": "^2.3.0",
    "pathe": "^0.3.0",
    "unocss": "^0.39.3",
    "vite": "^2.9.12"
  }
}